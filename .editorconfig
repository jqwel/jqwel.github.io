# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{js,py}]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 2

[*.py]
indent_size = 4

[template/**/*]
indent_size = 2


[dist-front-views/**/*]
indent_size = 2

[{dist/js/main.js,dist/script/nico.admin.js,dist-front/js/widget.js}]
indent_size = 2
insert_final_newline = true
